{
  "name": "email-service-studio",
  "version": "1.0.0",
  "description": "This is a codebase for creating a email server.",
  "main": "src/server.ts",
  "scripts": {
    "lint": "npx prettier src/. --write --check && npx eslint src/.",
    "local-dev:server": "npm run lint && nodemon src/server.ts",
    "local-dev:client": "npx tailwindcss -i client/styles.css -o client/tailwind_styles.css --watch",
    "build:client": "npx tailwindcss client/styles.css -o client/tailwind_styles.css && cp -rf client/ dist/client",
    "build:server": "npm run lint && npx tsc && cp package.json dist && cp -rf public/ dist/public",
    "local-build": "npx tsc --build --clean && npm i && npm run build:server && npm run build:client",
    "local-start": "npm run local-build && node dist/server.js",
    "local-test": "npm run local-build && jasmine --slient",
    "build": "rm -rf dist && rm -rf app.zip && npm i && npm run build:server && npm run build:client",
    "zip": "cd dist && zip -r -D ../app.zip *"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Tsangszesze/email-service-studio.git"
  },
  "author": "TsangSzeSze,CC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tsangszesze/email-service-studio/issues"
  },
  "homepage": "https://github.com/Tsangszesze/email-service-studio#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^6.4.14",
    "eslint": "^8.57.0",
    "globals": "^15.1.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  }
}
